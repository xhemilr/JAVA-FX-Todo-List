<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<DialogPane xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.DbConnectionController">
    <headerText>
        Setup Connection Settings
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Connection String" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="connString" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Username" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="username" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Password" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="password" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Button fx:id="btnTestDbConn" text="Test Connection" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
    </content>
</DialogPane>
